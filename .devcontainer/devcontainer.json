{
  "name": "Termux Ready",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  
  "forwardPorts": [2222],
  
  "portsAttributes": {
    "2222": {
      "label": "SSH",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "sudo apt update && sudo apt install -y tmux htop nano && echo 'PermitRootLogin no' | sudo tee -a /etc/ssh/sshd_config && sudo service ssh restart",
  
  "customizations": {
    "codespaces": {
      "openFiles": []
    }
  }
}
